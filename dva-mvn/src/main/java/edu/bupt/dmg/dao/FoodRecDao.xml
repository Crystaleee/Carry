<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="edu.bupt.dmg.dao.FoodRecDao">

	<resultMap type="edu.bupt.dmg.domain.FoodRec" id="FoodRecFileMap">
		<id column="RecordID" property="RecordID" />
		<result column="UserID" property="UserID" />
		<result column="Date" property="Date" />
		<result column="FoodCategory" property="FoodCategory" />
		<result column="Food_weight" property="Food_weight" />
		<result column="Foodname" property="Foodname" />
		<result column="Food_cal" property="Food_cal" />
		<result column="RecordID" property="RecordID" />

		


		<collection property="uploadFiles" ofType="edu.bupt.dmg.domain.UploadFile"
			select="edu.bupt.dmg.dao.UploadFileDao.findByRecordID" column="RecordID">
		</collection>
		<collection property="roles"
			ofType="edu.bupt.dmg.dao.RoleDao.RoleAuthorityMap" select="edu.bupt.dmg.dao.RoleDao.findByUserId"
			column="userId">
		</collection>
	</resultMap>

	<select id="findById" parameterType="String" resultMap="FoodRecFileMap">
		SELECT *
		FROM Food_record WHERE RecordID = #{RecordID}
	</select>
	
	
	<select id="updatedatebase" >
		update dvamvn.FoodRec SET Enabled = '-1'    
		WHERE  CURRENT_DATE  > str_to_date(`ExpirationDate`,'%Y-%m-%d')
	</select>



	<insert id="insert" parameterType="edu.bupt.dmg.domain.User">
		insert into
		Food_record(RecordID,UserID,Date,FoodCategory,Food_weight,Foodname,Food_cal)
		values(#{RecordID},#{UserID},#{Date},#{FoodCategory},#{Food_weight},#{Foodname},#{Food_cal})
	</insert>

	<update id="update" parameterType="edu.bupt.dmg.domain.User">
		update Food_record set
		UserID=#{UserID},
		Date=#{Date},
		FoodCategory=#{FoodCategory},
		Food_weight=#{Food_weight},
		Foodname=#{Foodname},
		Food_cal=#{Food_cal},

		where RecordID=#{RecordID}
	</update>

	<delete id="deleteById" parameterType="String">
		delete FROM Food_record WHERE
		RecordID = #{RecordID}
	</delete>

	<select id="findAll" resultMap="FoodRecFileMap">
		SELECT * from Food_record
	</select>

	<!-- 此种方式查询password字段无效,且不对权限值做限制 -->
	<select id="findByCondition" parameterType="edu.bupt.dmg.domain.Food"
		resultMap="FoodRecFileMap">
		SELECT * from Food_record
		<where>
			<if test="RecordID!=null and RecordID!=''">
				and RecordID like '%${RecordID}%'
			</if>
		</where>
	</select>
</mapper>